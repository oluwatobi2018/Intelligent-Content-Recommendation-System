# üåç General Configuration
NODE_ENV=development

# üöÄ Backend Configuration
PORT=5000
DATABASE_URL=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority
JWT_SECRET=your_super_secret_key
SESSION_SECRET=your_random_session_secret
CORS_ORIGIN=http://localhost:3000  # Update with your frontend URL in production

# OAuth (Google Example)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# üîê Security & Rate Limiting
RATE_LIMIT_WINDOW=15  # In minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# üåê Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api  # Public API URL for frontend
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id  # Optional: Analytics

# üì° Third-Party APIs
REDIS_URL=redis://localhost:6379  # Redis for caching (if used)
SENTRY_DSN=your_sentry_dsn  # Error monitoring (if used)

ENCRYPTION_KEY=your_32_character_secure_key_here

